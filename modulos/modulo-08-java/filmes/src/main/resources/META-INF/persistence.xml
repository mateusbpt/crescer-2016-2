<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="cadastro_de_filmes" transaction-type="JTA">
    <jta-data-source>jdbc/cadastro_de_filmes</jta-data-source>
    <class>br.com.cwi.crescer.filmes.entidades.Ator</class>
    <class>br.com.cwi.crescer.filmes.entidades.Classificacao</class>
    <class>br.com.cwi.crescer.filmes.entidades.Elenco</class>
    <class>br.com.cwi.crescer.filmes.entidades.Filme</class>
    <class>br.com.cwi.crescer.filmes.entidades.Genero</class>
    <class>br.com.cwi.crescer.filmes.entidades.Idioma</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
