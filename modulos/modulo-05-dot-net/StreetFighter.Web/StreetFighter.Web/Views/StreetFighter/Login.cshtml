
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <link rel="icon" href="http://www.gsarchives.net/gameboyadvance/super_street_fighter_2_turbo_revival/sprites/non-animated/chunli_icon.gif" type="image/x-icon" />
    <link rel="shortcut icon" href="http://www.gsarchives.net/gameboyadvance/super_street_fighter_2_turbo_revival/sprites/non-animated/chunli_icon.gif" type="image/x-icon" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/estilo-site.css">
</head>

<body>

    <div id="titulo">
        @ViewBag.Title
    </div>

    <div id="conteudo">

        <p id="cadastro-fail">@ViewBag.Mensagem</p>

        @using (Html.BeginForm("FazerLogin", "StreetFighter", FormMethod.Post))
        {

            
            <div class="form-group">
                @Html.Label("Login", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBox("login", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Senha", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                     @Html.AntiForgeryToken()
                     @Html.Password("senha", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-10 col-sm-10">
                    <button type="submit">Entrar</button>
                </div>
            </div>
        }

    </div>
</body>
</html>
